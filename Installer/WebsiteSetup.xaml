<Page x:Class="Installer.WebsiteSetup"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      Height="350" Width="200"
      Background="White"
      HorizontalAlignment="Right"
	Title="WebsiteSetup">

    <Grid>
        <StackPanel Height="300" >
            <Label Content="Website Name" Padding="0,2" Width="150"/>
            <TextBox Name="TxtWebsiteName" TextWrapping="Wrap" Width="150"/>
        </StackPanel>
        <ProgressBar HorizontalAlignment="Left" Height="10" IsIndeterminate="True" Margin="52,144,0,0" Name="ExtractFilesProgress" VerticalAlignment="Top" Visibility="Hidden" Width="100" />
        <Button Content="Next" IsDefault="True" Margin="110,315,10,10" Name="BtnNext" Click="FinishInstallation"/>
    </Grid>
</Page>
